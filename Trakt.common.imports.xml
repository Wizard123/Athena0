<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>background_02.jpg</texture>
      <width>1920</width>
      <height>1080</height>
    </control>    

    <control>
      <description>Backdrop Overlay - thumbs View</description>
      <type>image</type>
      <id>0</id>
      <posX>40</posX>
      <posY>135</posY>
      <width>1832</width>
      <height>943</height>
      <texture>0011.png</texture>
    </control>	
	
    <control>
      <description>Current window</description>
      <type>label</type>
      <id>0</id>
      <posX>1810</posX>
      <posY>33</posY>
      <align>right</align>
      <width>1800</width>
      <font>fontL</font>		  
      <label>#(iif(and(neq(L(102012), #currentmodule), neq(L(102002), #currentmodule), neq(L(100100), #currentmodule), neq(L(102015), #currentmodule)), #currentmodule, ' '))</label>
      <textcolor>eaeaea</textcolor>		  
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
		
    <control>
      <description>Date / Time</description>
      <type>label</type>
      <id>0</id>
      <posX>1810</posX>
      <posY>113</posY>
      <label>#time #date #itemcount Files</label>
      <align>right</align>
      <font>fontL2</font>
      <textcolor>eaeaea</textcolor>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
    </control>
  </controls>
</window>