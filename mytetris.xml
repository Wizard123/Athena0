<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>7776</id>
  <defaultcontrol>10</defaultcontrol>
  <allowoverlay>no</allowoverlay>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>1</id>
      <texture>background.png</texture>
      <width>1920</width>
      <height>1080</height>
    </control>
    <import>common.window.xml</import>
    <import>common.time.xml</import>
    <control>
      <description>button group</description>
      <type>group</type>
      <!-- animations in this screen are equal for all objects, because nextblock-image got it's animation by tetris control, but it's possition is in scoreboard -->
      
      
      <animation effect="slide" time="70" start="-450,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="1200,0">WindowClose</animation>
      <posX>75</posX>
      <posY>181</posY>
      <layout>StackLayout</layout>
      <control>
        <description>New Game</description>
        <type>button</type>
        <id>2</id>
        <label>19002</label>
        <onright>10</onright>
        <onup>17</onup>
      </control>
      <control>
        <description>Sounds</description>
        <type>checkbutton</type>
        <id>4</id>
        <label>19004</label>
        <onright>10</onright>
      </control>
    </control>
    <control>
      <description>info group</description>
      <type>group</type>
      
      
      <animation effect="slide" time="70" start="-450,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="1200,0">WindowClose</animation>
      <control>
        <description>Scoreboard background</description>
        <type>image</type>
        <id>200</id>
        <posX>100</posX>
        <posY>603</posY>
        <width>505</width>
        <height>421</height>
        <texture>tetris\scoreboard.png</texture>
        <colordiffuse>60ffffff</colordiffuse>
      </control>
      <control>
        <description>Score: label</description>
        <type>label</type>
        <id>201</id>
        <posX>138</posX>
        <posY>768</posY>
        <label>19005</label>
      </control>
      <control>
        <description>Score</description>
        <type>label</type>
        <id>202</id>
        <posX>570</posX>
        <posY>768</posY>
        <width>432</width>
        <align>right</align>
        <label>#tetris_score</label>
      </control>
      <control>
        <description>Level: label</description>
        <type>label</type>
        <id>203</id>
        <posX>138</posX>
        <posY>832</posY>
        <label>19006</label>
      </control>
      <control>
        <description>Level</description>
        <type>label</type>
        <id>204</id>
        <posX>570</posX>
        <posY>832</posY>
        <width>432</width>
        <align>right</align>
        <label>#tetris_level</label>
      </control>
      <control>
        <description>Lines: label</description>
        <type>label</type>
        <id>205</id>
        <posX>138</posX>
        <posY>895</posY>
        <label>19007</label>
      </control>
      <control>
        <description>Lines</description>
        <type>label</type>
        <id>206</id>
        <posX>570</posX>
        <posY>895</posY>
        <width>432</width>
        <align>right</align>
        <label>#tetris_lines</label>
      </control>
      <control>
        <description>Highscore: label</description>
        <type>label</type>
        <id>205</id>
        <posX>138</posX>
        <posY>960</posY>
        <label>19008</label>
      </control>
      <control>
        <description>Highscore</description>
        <type>label</type>
        <id>206</id>
        <posX>570</posX>
        <posY>960</posY>
        <width>432</width>
        <align>right</align>
        <label>#tetris_highscore</label>
      </control>
    </control>
    <control>
      <description>group element</description>
      <type>group</type>
      
      
      <animation effect="slide" time="70" start="-450,0">WindowOpen</animation>
      <animation effect="slide" time="70" end="1200,0">WindowClose</animation>
      <control>
        <description>Tetris control</description>
        <type>tetris</type>
        <id>10</id>
        <posX>772</posX>
        <posY>181</posY>
        <width>1053</width>
        <height>843</height>
        <font>font16</font>
        <textcolor>ffffffff</textcolor>
        <onback>2</onback>
        <onleft>2</onleft>
        <onright>10</onright>
        <onup>10</onup>
        <ondown>10</ondown>
        <colordiffuse>60ffffff</colordiffuse>
        <texture>tetris\background.png</texture>
        <texturefocus>tetris\background_focus.png</texturefocus>
        <textureLeft>tetris\guide.png</textureLeft>
        <textureRight>tetris\guide.png</textureRight>
        <nextblockx>155</nextblockx>
        <nextblocky>368</nextblocky>
      </control>
